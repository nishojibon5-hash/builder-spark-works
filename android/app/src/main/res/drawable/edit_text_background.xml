<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_primary" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_secondary" />
            <stroke android:width="1dp" android:color="@color/border_light" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_primary" />
            <stroke android:width="1dp" android:color="@color/border_medium" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector>
